---
import Container from '@/components/layout/Container.astro'
import Link from '@/components/Link.astro'
import { SITE } from '@/consts';
---

<header role="banner">
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link
        href="/"
        title={`${SITE.NAME} - Return to homepage`}
        externalInNewTab={false}
        underline={false}
        class="font-bold"
        aria-label={`${SITE.NAME} - Return to homepage`}
      >
        <div class="font-bold uppercase hover:scale-105 transition-transform ease-out duration-500">
          {SITE.NAME}
        </div>
      </Link>
      <nav role="navigation" aria-label="Main navigation">
        <ul class="flex gap-1 list-none p-0 m-0" role="menubar">
          {[
            { href: '/blog', label: 'Blog', text: 'blog' },
            { href: '/projects', label: 'Projects', text: 'projects' },
            { href: '/art', label: 'Art', text: 'art' },
            { href: 'https://links.fractalcounty.com/', label: 'Links', text: 'links', external: true },
          ].map((item, index) => (
            <>
              <li role="none">
                <Link
                  href={item.href}
                  title={`View ${item.label.toLowerCase()}`}
                  externalInNewTab={item.external}
                  underline={true}
                  aria-label={`${item.label}${item.external ? ' (opens in new tab)' : ''}`}
                >
                  {item.text}
                </Link>
              </li>
              {index < 3 && (
                <li role="none">
                  <span aria-hidden="true">/</span>
                </li>
              )}
            </>
          ))}
        </ul>
      </nav>
    </div>
  </Container>
</header>
