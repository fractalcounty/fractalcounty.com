---
import Button from '@/components/Button.astro'
import ColorModeButton from '@/components/ColorModeButton.astro'
import Container from '@/components/layout/Container.astro'
import Link from '@/components/Link.astro'
import { SITE } from '@/consts'
import { Icon } from 'astro-icon/components';
---

<footer class="animate">
  <Container>
    <div class="relative">
      <div class="absolute right-0 -top-20">
      </div>
    </div>
    <div class="flex justify-between items-center">
      <div>
        <Link
          href="/UNLICENSE"
          class="flex items-center gap-1"
          underline={false}
          externalInNewTab={false}
        >
          <Icon name="anticopyright" class="text-[11px]" />
          2024 | {SITE.NAME}
        </Link>
      </div>
      <div class="flex flex-wrap gap-1 items-center justify-end">
        <div class="flex-grow-0 transition-all duration-300 ease-in-out">
          <ColorModeButton />
        </div>
        <div class="flex-grow-0 transition-all duration-300 ease-in-out opacity-0 pointer-events-none" id="back-to-top-wrapper">
          <Button id="back-to-top" arrow="up">Back to top</Button>
        </div>
      </div>
    </div>
  </Container>
</footer>
