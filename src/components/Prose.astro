---
interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<article
  class:list={[
    'prose',
    'prose-headings:text-theme-200] prose-headings:font-bold',
    'prose-p:text-theme-300]',
    'prose-strong:text-theme-200]',
    'prose-em:text-theme-200]',
    'prose-code:text-theme-200] prose-code:bg-bg-focused',
    'prose-blockquote:text-theme-500]',
    'prose-figcaption:text-theme-500]',
    'prose-lead:text-theme-200]',
    'prose-ul:text-theme-500]',
    'prose-ol:text-theme-500]',
    'prose-li:text-theme-500]',
    'prose-img:mx-auto prose-img:my-auto',
    className,
  ]}>
  <slot />
</article>
