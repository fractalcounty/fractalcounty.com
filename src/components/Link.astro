---
import { cn } from '@lib/utils'
import { Link as AstroLink } from 'astro-link'

export interface Props {
  href: string
  title?: string
  class?: string
  style?: string
  underline?: boolean
  externalInNewTab?: boolean
  prefetch?: boolean
}

const {
  href,
  title,
  externalInNewTab,
  underline = true,
  prefetch = true,
  class: className,
  ...rest
} = Astro.props

const shouldPrefetch = prefetch && href.startsWith('/');
---

<AstroLink
  href={href}
  title={title}
  externalInNewTab={externalInNewTab}
  data-astro-prefetch={shouldPrefetch ? 'hover' : undefined}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline
      ? 'underline decoration-primary/65 underline-offset-2 hover:decoration-primary'
      : 'no-underline',
    'hover:text-primary',
    className,
  )}
  {...rest}
>
  <slot />
</AstroLink>
