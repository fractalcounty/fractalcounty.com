---
import { cn } from '@lib/utils';
import { Link as AstroLink } from 'astro-link';

type Props = {
  href: string;
  title?: string;
  externalInNewTab?: boolean;
  underline?: boolean;
  class?: string;
}

const { href, title, externalInNewTab, underline = true, class: className, ...rest } = Astro.props;
---

<AstroLink
  href={href}
  title={title}
  externalInNewTab={externalInNewTab}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline
      ? 'underline decoration-primary/65 underline-offset-2 hover:decoration-primary'
      : 'no-underline',
    'hover:text-primary',
    className
  )}
  {...rest}
>
  <slot/>
</AstroLink>