---
import type { ImageMetadata } from 'astro'
import ContentImage from '@components/content/ContentImage.astro'
import ChirpFont from '@components/fonts/ChirpFont.astro'
import Link from '@components/Link.astro'
import { Icon } from 'astro-icon/components'

interface QuotedTweet {
  name: string
  handle: string
  text?: string
  pfp: string | ImageMetadata
  imageUrl?: string | ImageMetadata
}

interface Props {
  name?: string
  handle?: string
  pfp?: string | ImageMetadata
  text?: string
  imageUrl?: string | ImageMetadata
  hashtags?: string
  retweets?: string
  replies?: string
  likes?: string
  src?: string
  quotedTweet?: QuotedTweet
  date?: Date | string
}

const {
  name = 'chip',
  handle = 'chippledipple',
  pfp = './chip-pfp.webp',
  text,
  imageUrl,
  retweets = '100k',
  replies = '50k',
  likes = '300k',
  src = 'https://twitter.com',
  quotedTweet,
  date,
} = Astro.props

const hasContent = text || imageUrl

const formatTwitterDate = (date: Date | string | undefined) => {
  if (!date) return ''
  const d = typeof date === 'string' ? new Date(`${date}T00:00:00`) : date
  const month = d.toLocaleString('en-US', { month: 'short' })
  return `${month} ${d.getDate()}, ${d.getFullYear()}`
}
---

<ChirpFont />

<div
  class='tweet mx-auto my-8 rounded-lg border border-theme-500 bg-theme-800 p-6 text-theme-200 shadow-lg'
  style="font-family: Chirp, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;"
  role='article'
  aria-label={`Tweet by ${name}`}>
  <div class='header flex items-start pr-2'>
    <div
      class='avatar mr-[16px] size-12 flex-shrink-0 overflow-hidden rounded-full'>
      <ContentImage
        src={pfp}
        alt={`${name}'s avatar`}
        style={false}
        class='h-full w-full'
        imageClass='w-full h-full object-cover'
        captionType='hidden'
        enableFullResLink={false}
      />
    </div>

    <div class='flex-grow'>
      <div class='flex items-center justify-between'>
        <div class='info'>
          <span class='username font-semibold text-theme-200'>{name}</span>
          <span
            class='handle font-normal text-theme-400'
            aria-label={`${handle} username`}>@{handle}</span
          >
          {
            date && (
              <>
                <span class='date-separator text-theme-400' aria-hidden='true'>
                  Â·
                </span>
                <span class='date text-theme-400'>
                  {formatTwitterDate(date)}
                </span>
              </>
            )
          }
        </div>
      </div>

      {text && <p class='body text-theme-200'>{text}</p>}

      {
        imageUrl && (
          <div class={`tweet-image ${text ? '-mt-3' : ''} -my-4 -mt-6`}>
            <ContentImage
              src={imageUrl}
              alt='Tweet media'
              style={true}
              class='w-full'
              imageClass='w-full h-auto object-cover rounded-lg'
              captionType='hidden'
              enableFullResLink={false}
            />
          </div>
        )
      }

      {
        quotedTweet && (
          <div
            class='quoted-tweet mb-3 mt-3 rounded-lg border border-theme-500 bg-theme-800 pb-3 pl-3 pr-3 pt-2'
            role='article'
            aria-label={`Quoted tweet by ${quotedTweet.name}`}>
            <div class='flex items-center gap-2'>
              <span class='quoted-pfp size-6 flex-shrink-0 overflow-hidden rounded-full'>
                <ContentImage
                  src={quotedTweet.pfp}
                  alt={`${quotedTweet.name}'s avatar`}
                  style={false}
                  class='h-full w-full'
                  imageClass='w-full h-full object-cover'
                  captionType='hidden'
                  enableFullResLink={false}
                />
              </span>

              <div class='info'>
                <span class='username font-medium text-theme-300'>
                  {quotedTweet.name}
                </span>
                <span
                  class='handle font-normal text-theme-400'
                  aria-label={`${quotedTweet.handle} username`}>
                  @{quotedTweet.handle}
                </span>
              </div>
            </div>

            {quotedTweet.text && (
              <p class='body text-theme-300'>{quotedTweet.text}</p>
            )}

            {quotedTweet.imageUrl && (
              <div class={`tweet-image ${quotedTweet.text ? 'mt-2' : ''} mb-2`}>
                <ContentImage
                  src={quotedTweet.imageUrl}
                  alt='Quoted tweet media'
                  style={true}
                  class='w-full'
                  imageClass='w-full h-auto object-cover rounded-lg'
                  captionType='hidden'
                  enableFullResLink={false}
                />
              </div>
            )}
          </div>
        )
      }

      {
        hasContent && (
          <div
            class='actions mt-3 flex w-full flex-row items-center justify-between bg-inherit text-theme-300'
            role='group'
            aria-label='Tweet actions'>
            <div class='flex w-full items-center justify-between gap-4'>
              <button class='action' aria-label={`Reply, ${replies} replies`}>
                <Icon name='lucide:message-square' />
                <span>{replies}</span>
              </button>
              <button
                class='action'
                aria-label={`Retweet, ${retweets} retweets`}>
                <Icon name='lucide:repeat' />
                <span>{retweets}</span>
              </button>
              <button class='action' aria-label={`Like, ${likes} likes`}>
                <Icon name='lucide:heart' />
                <span>{likes}</span>
              </button>
              <Link
                href={src}
                class='action font-normal text-theme-300'
                data-tip='View original source'
                underline={false}
                externalInNewTab={true}
                aria-label='View original tweet'>
                <Icon name='lucide:link' class='size-4' />
                <span class='hidden sm:inline'>Source</span>
              </Link>
            </div>
          </div>
        )
      }
    </div>
  </div>
</div>

<style>
  :global(.tooltip) {
    font-weight: normal !important;
    font-family: 'Inter', sans-serif !important;
  }

  :global(.tooltip:before) {
    font-weight: normal !important;
    font-family: 'Inter', sans-serif !important;
  }

  .tweet {
    font-family:
      Chirp,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
    @apply p-4;
    width: 95% !important;
    max-width: 640px !important;
    min-width: 0;
    @apply break-words;
  }

  .tweet * {
    font-family: inherit;
  }

  .tweet > * {
    @apply !m-0;
  }

  .tweet :global(p) {
    @apply !m-0;
  }

  .info {
    @apply flex flex-row items-center justify-center space-x-1;
  }

  .body {
    @apply !m-0 leading-[1.4];
  }

  .quoted-pfp {
    position: relative;
    padding: 0 !important;
  }

  .quoted-pfp :global(*) {
    padding: 0 !important;
    margin: 0 !important;
  }

  .quoted-pfp :global(img) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    padding: 0 !important;
    margin: 0 !important;
  }

  .avatar {
    position: relative;
  }

  .avatar :global(img) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .action {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: color 0.2s ease;
    @apply text-sm;
    @apply flex min-w-0 items-center justify-start gap-1;
  }

  .action:hover {
    color: oklch(var(--p));
  }

  .action :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
    display: block;
  }

  .header {
    align-items: flex-start;
  }

  .tweet :global(p) {
    @apply m-0;
  }

  .tweet-image {
    max-width: 100%;
    overflow: hidden;
  }

  .tweet-image :global(img) {
    max-height: 300px;
    width: 100%;
    object-fit: cover;
  }

  .date-separator {
    @apply mx-1;
  }

  .actions {
    min-width: 0;
    width: 100%;
  }
</style>
