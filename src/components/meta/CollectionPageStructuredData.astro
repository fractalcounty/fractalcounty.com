---
import { generateBreadcrumbSchema, generateCollectionSchema, organizationSchema, personSchema, websiteSchema } from '@/lib/schema'

interface Props {
  type: 'blog' | 'projects' | 'artwork'
  name: string
  description: string
}

const { type, name, description } = Astro.props
const pageUrl = new URL(Astro.url.pathname, Astro.site)

// Collection pages have 2 levels
const breadcrumbItems = [
  { name: 'Home', item: 'https://fractalcounty.com/' },
  { name, item: pageUrl.toString() },
]

const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    generateCollectionSchema(type, pageUrl, name, description),
    generateBreadcrumbSchema(breadcrumbItems),
    websiteSchema,
    organizationSchema,
    personSchema,
  ],
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
