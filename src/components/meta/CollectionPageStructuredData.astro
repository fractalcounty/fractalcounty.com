---
import {
  generateBreadcrumbSchema,
  generateCollectionSchema,
  organizationSchema,
  personSchema,
  websiteSchema,
} from '@/lib/schema'

interface Props {
  type: 'blog' | 'artwork'
  name: string
  description: string
}

const { type, name, description } = Astro.props
const pageUrl = new URL(Astro.url.pathname, Astro.site)

// Collection pages have 2 levels
const breadcrumbItems = [
  { name: 'Home', item: new URL('/', Astro.site).toString() },
  { name, item: pageUrl.toString() },
]

const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    generateCollectionSchema(type, pageUrl, name, description),
    generateBreadcrumbSchema(breadcrumbItems),
    {
      '@type': 'WebPage',
      '@id': pageUrl.toString(),
      url: pageUrl.toString(),
      name,
      description,
      isPartOf: {
        '@id': 'https://fractalcounty.com/#website',
      },
      breadcrumb: {
        '@id': `${pageUrl.toString()}#breadcrumb`,
      },
      inLanguage: 'en-US',
    },
    websiteSchema,
    organizationSchema,
    personSchema,
  ],
}
---

<script type='application/ld+json' set:html={JSON.stringify(schema)} />
