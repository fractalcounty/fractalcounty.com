---
import type { CollectionEntry } from 'astro:content'
import { generateArtworkSchema, generateBreadcrumbSchema, organizationSchema, personSchema, websiteSchema } from '@/lib/schema'

interface Props {
  artwork: CollectionEntry<'artwork'>
  imageUrl: string
}

const { artwork, imageUrl } = Astro.props
const pageUrl = new URL(Astro.url.pathname, Astro.site)

// Artwork pages have 3 levels
const breadcrumbItems = [
  { name: 'Home', item: 'https://fractalcounty.com/' },
  { name: 'Art', item: 'https://fractalcounty.com/art/' },
  { name: artwork.data.title, item: pageUrl.toString() },
]

const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    generateArtworkSchema(artwork, pageUrl, imageUrl),
    generateBreadcrumbSchema(breadcrumbItems),
    websiteSchema,
    organizationSchema,
    personSchema,
    {
      '@type': 'ImageObject',
      '@id': `${pageUrl.toString()}#primaryimage`,
      'url': imageUrl,
      'width': 1200,
      'height': 630,
      'caption': artwork.data.title,
    },
  ],
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
