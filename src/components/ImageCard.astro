---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
  imagePath: string
  altText: string
  class?: string
  imageClass?: string
  showShadow?: boolean
  rounded?: boolean
  showCaption?: boolean
  scale?: number
}

const {
  imagePath,
  altText,
  class: className,
  imageClass = '',
  showShadow = true,
  rounded = true,
  showCaption = true,
  scale = 1,
} = Astro.props

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/content/blog/**/*.{jpeg,jpg,png,gif,webp}',
)

if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/content/blog/**/*.{jpeg,jpg,png,gif,webp}"`,
  )
}
---

<div
  class={`custom-image-card-wrapper ${className || ''}`}
  style={`--scale-factor: ${scale};`}
>
  <figure class="custom-image-card prose">
    <Image
      src={images[imagePath]()}
      alt={altText}
      class={`mx-auto my-auto ${rounded ? 'rounded-3xl' : ''} ${showShadow ? 'shadow-xl' : ''} ${imageClass}`}
    />
    {
      showCaption && (
        <figcaption class="custom-image-card-caption">{altText}</figcaption>
      )
    }
  </figure>
</div>

<style is:global>
  .custom-image-card-wrapper {
    width: calc(100% * var(--scale-factor));
    margin: 0 auto;
  }
  .custom-image-card {
    max-width: 100%;
  }
  .custom-image-card img {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .custom-image-card-caption {
    @apply prose-sm text-center mt-2 italic text-accent-content;
  }
</style>
