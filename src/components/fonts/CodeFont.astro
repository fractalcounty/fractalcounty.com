---
import { AstroFont } from 'astro-font'
---

<AstroFont
  config={[
    {
      name: 'CommitMono',
      src: [
        {
          style: 'normal',
          weight: 'normal',
          path: '/fonts/CommitMono.woff2',
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.code',
      fallback: 'monospace',
    },
  ]}
/>

<style is:global>
  .code {
    font-family: 'CommitMono', monospace;
  }
</style>
