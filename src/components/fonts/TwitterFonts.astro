---
import { AstroFont } from 'astro-font'
---

<AstroFont
  config={[
    {
      name: 'Chirp',
      src: [
        {
          style: 'normal',
          weight: 'normal',
          path: '/fonts/ChirpRegular.woff2',
        },
        {
          style: 'normal',
          weight: '500',
          path: '/fonts/ChirpMedium.woff2',
        },
        {
          style: 'normal',
          weight: '600',
          path: '/fonts/ChirpBold.woff2',
        },
        {
          style: 'normal',
          weight: '700',
          path: '/fonts/ChirpHeavy.woff2',
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.tweet',
      fallback: 'sans-serif',
    },
  ]}
/>

<style is:global>
  .tweet {
    font-family: 'Chirp', sans-serif;
  }
</style>
