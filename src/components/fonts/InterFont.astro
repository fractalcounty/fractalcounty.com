---
// define font subset to reduce size
const FONT_URL =
  'https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap'
---

<Fragment>
  <!-- high-priority resource hints -->
  <link
    rel='preconnect'
    href='https://fonts.googleapis.com'
    crossorigin='anonymous'
  />
  <link
    rel='preconnect'
    href='https://fonts.gstatic.com'
    crossorigin='anonymous'
  />

  <!-- inline critical font styles -->
  <style is:inline>
    /* fallback font metrics matching Inter */
    @font-face {
      font-family: 'Inter Fallback';
      src: local(Arial);
      ascent-override: 90%;
      descent-override: 22%;
      line-gap-override: 0%;
      size-adjust: 107%;
    }
  </style>

  <!-- load font with high priority -->
  <link
    rel='stylesheet'
    href={FONT_URL}
    media='print'
    onload="this.media='all'"
  />

  <!-- no-js fallback -->
  <noscript>
    <link rel='stylesheet' href={FONT_URL} />
  </noscript>
</Fragment>
