---
import { AstroFont } from 'astro-font'
---

<AstroFont
  config={[
    {
      name: 'gg-sans',
      src: [
        {
          style: 'normal',
          weight: 'normal',
          path: '/fonts/ggSansRegular.woff2',
        },
        {
          style: 'normal',
          weight: 'bold',
          path: '/fonts/ggSansSemiBold.woff2',
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.discord-conversation, .discord-message',
      fallback: 'sans-serif',
    },
  ]}
/>

<style is:global>
  .discord-conversation,
  .discord-message {
    font-family: 'gg-sans', sans-serif;
  }
</style>
