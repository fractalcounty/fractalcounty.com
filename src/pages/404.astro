---
import Button from '@/components/Button.astro'
import Link from '@/components/Link.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { Icon } from 'astro-icon/components'

const ERROR_MESSAGES = [
  // generic
  'page not found',
  'there is nothing here',
  'this path leads nowhere',
  'where have you gone',
  'dead end',
  'something is missing',
  "this isn't right",
  'abandon all hope',

  // deltarune
  'but nobody came',

  // hawaii part ii
  'blinding, shining star, no page here so far',
  'alone at the edge of the universe',
  'but none were there',
  'you fell into a hole you cannot see',
  'calming if you look at it right',
]

const randomMessage =
  ERROR_MESSAGES[Math.floor(Math.random() * ERROR_MESSAGES.length)]
---

<PageLayout
  title={site.pages['404'].title}
  description={site.pages['404'].description}
>
  <section
    class='animate relative flex flex-col items-center justify-center gap-y-8 pt-12 text-center'
  >
    <div class='relative flex items-center justify-center'>
      <p
        class='title !text-[12rem] !font-bold !text-base-content/25'
        style='font-size: 12rem !important; line-height: 1 !important; color: oklch(var(--n))'
      >
        404
      </p>
      <Icon
        name='octangula'
        size='10rem'
        class='error-icon absolute z-10 text-primary'
      />
    </div>

    <article>
      <h1
        class='title !text-[1rem] !font-bold !tracking-tighter'
        style='font-size: 2rem !important; line-height: 1 !important;'
      >
        {randomMessage}
      </h1>

      <Link href='/' underline={false} class='z-10 mt-3'>
        <Button arrow='left'> take me HOME </Button>
      </Link>
    </article>
  </section>

  <style>
    .error-icon {
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(10px);
      }
      50% {
        transform: translateY(-10px);
      }
    }
  </style>
</PageLayout>
