---
import Button from '@/components/Button.astro'
import Link from '@/components/Link.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { Icon } from 'astro-icon/components'
---

<PageLayout
  title={site.pages['404'].title}
  description={site.pages['404'].description}
>
  <section
    class='animate relative flex flex-col items-center justify-center gap-y-8 pt-12 text-center'
  >
    <div class='relative flex items-center justify-center'>
      <p
        class='title !text-[12rem] !font-bold !text-base-content/25'
        style='font-size: 12rem !important; line-height: 1 !important; color: oklch(var(--n))'
      >
        404
      </p>
      <Icon
        name='octangula'
        size='10rem'
        class='error-icon absolute z-10 text-primary'
      />
    </div>

    <article>
      <error-message>
        <h1
          class='title !text-[1rem] !font-bold !tracking-tighter'
          style='font-size: 2rem !important; line-height: 1 !important;'
        >
          page not found
        </h1>
      </error-message>

      <Link href='/' underline={false} class='z-10 mt-3' prefetch={true}>
        <Button arrow='left' responsive={false}> take me HOME </Button>
      </Link>
    </article>
  </section>

  <script>
    // define error messages array
    const ERROR_MESSAGES = [
      'page not found',
      'there is nothing here',
      'this path leads nowhere',
      'where have you gone',
      'dead end',
      'something is missing',
      "this isn't right",
      'abandon all hope',
      'but nobody came',
      'blinding, shining star, no page here so far',
      'alone at the edge of the universe',
      'but none were there',
      'you fell into a hole you cannot see',
      'calming if you look at it right',
    ]

    // create custom element for client-side message randomization
    class ErrorMessage extends HTMLElement {
      connectedCallback() {
        const h1 = this.querySelector('h1')
        if (!h1) return

        // set random message
        const randomMessage =
          ERROR_MESSAGES[Math.floor(Math.random() * ERROR_MESSAGES.length)]
        h1.textContent = randomMessage
      }
    }

    // register custom element
    customElements.define('error-message', ErrorMessage)
  </script>

  <style>
    .error-icon {
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(10px);
      }
      50% {
        transform: translateY(-10px);
      }
    }
  </style>
</PageLayout>
