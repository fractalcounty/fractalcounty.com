---
import Footer from '@/components/layout/Footer.astro'
import Header from '@/components/layout/Header.astro'
import Head from '@/components/meta/Head.astro'
import { ViewTransitions } from 'astro:transitions'

type Props = {
  title: string
  description: string
  type?: 'website' | 'article'
  publishedTime?: Date
  tags?: string[]
  isWebcomic?: boolean
  isContentPage?: boolean
}

const {
  title,
  description,
  type = 'website',
  publishedTime,
  tags = [],
  isWebcomic = false,
  isContentPage = false,
} = Astro.props

const publishedTimeString = publishedTime?.toISOString();
---

<!doctype html>
<html lang="en" class:list={[isWebcomic && 'is-webcomic-page']}>
  <head>
    <Head
      title={title}
      description={description}
      type={type}
      publishedTime={publishedTimeString}
      tags={tags}
    />
    <slot name="structured-data" />
    <ViewTransitions
      fallback="swap"
      handleForms
    />
    <style is:global>
      /* webcomic page header styles */
      html.is-webcomic-page header {
        position: absolute;
      }

      /* base background color for webcomic pages */
      html.is-webcomic-page body {
        background-color: hsl(var(--b2));
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header role="banner" />
    <main
      class="flex-1"
      class:list={[
        isContentPage ? 'py-20' : 'py-32',
        isWebcomic && 'pt-16',
      ]}
    >
      <slot />
    </main>
    <Footer role="contentinfo" />
  </body>
</html>
